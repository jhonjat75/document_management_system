<%= form_with(model: folder, local: true) do |form| %>
  <% if folder.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(folder.errors.count, "error") %> prohibido que esta carpeta sea guardada:</h2>
      <ul>
        <% folder.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card header-color">
    <div class="card-header ">
      <h3 class="card-title">Detalles de la Carpeta</h3>
    </div>
    <div class="card-body">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="card-footer d-grid gap-2 d-flex justify-content-end">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
