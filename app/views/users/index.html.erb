<h1 class="my-4">Usuarios</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Email</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.role %></td>
          <td>
            <%= link_to 'Mostrar', user, class: 'btn btn-info btn-sm' %>
            <%= link_to 'Editar', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Nuevo Usuario', new_user_path, class: 'btn btn-primary' %>

